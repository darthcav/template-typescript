{
    "name": "template-typescript",
    "description": "A general-purpose TypeScript project template for Node.js >= 24",
    "version": "0.0.1",
    "author": {
        "name": "darthcav"
    },
    "license": "Apache-2.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "package.json",
        "package-lock.json",
        "README.md",
        "LICENSE",
        "src/**/*.ts",
        "src/**/*.tsx",
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts",
        "dist/**/*.d.ts.map",
        "dist/**/*.d.tsx",
        "dist/**/*.d.tsx.map"
    ],
    "devDependencies": {
        "@biomejs/biome": "2.3.15",
        "@types/node": "25.2.3",
        "asserttt": "1.0.1",
        "shx": "0.4.0",
        "typedoc": "0.28.17"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:darthcav/template-typescript.git"
    },
    "engines": {
        "node": ">=24"
    },
    "scripts": {
        "\n===== Build =====": "",
        "build": "npm run clean && tsc",
        "prepare": "npm run build",
        "clean": "shx rm -rf dist/*",
        "\n===== Typecheck =====": "",
        "typecheck": "tsc --noEmit",
        "\n===== Start =====": "",
        "start": "node --env-file=.env.local src/start.ts",
        "\n===== Test =====": "",
        "test": "node --env-file=.env.local --test 'src/**/*.test.ts'",
        "test:coverage": "node --env-file=.env.local --experimental-test-coverage --test 'src/**/*.test.ts'",
        "\n===== Linter =====": "",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "\n===== TypeDoc =====": "",
        "doc": "shx rm -rf public/* && typedoc --tsconfig tsconfig.json"
    }
}
